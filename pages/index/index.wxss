@import "../font.wxss";

#bg-image {
  position: absolute;
  width: 100%;
  height: 100%;  
  z-index: -1;
}

#category-id-container {
  padding-top: 22px;
}

.category-item {
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
  font-size: 32px;
  font-family: zzzz;
}

#note {
  position: fixed;
  bottom: 0;
  padding: 10px;
}

#item-list-title {
  height: 32px;
  font-size: 18px;
}

.question-item {
  display: inline-block;
  width: 250rpx;
  height: 250rpx;
  position: relative;
}

.question-done {
  position: absolute;
  width: 32px;
  height: 32px;
  top: 16px;
  right: 16px;
  z-index: 99;
}

.question-thumb {
  position: absolute;
  left: 50%;
  margin-left: -48px;
  top: 50%;
  margin-top: -48px;
  width: 96px;
  height: 96px;
  font-size: 18px;
  background-color: #c88f03;
  background-repeat: no-repeat;
  background-size: cover;
}

#item-bottom-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.7);
}

#navigateBack {
  padding: 2vw;
  display: inline-block;
  color: rgb(52, 143, 199);
}

#progress-info {
  display: inline-block;
  margin-left: 2vw;
}

#go {
  color: rgb(52, 143, 199);
  padding: 2vw;
  position: absolute;
  bottom: 0;
  right: 0;
}
