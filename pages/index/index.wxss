page {
  background-color:rgb(234,246,239);
}

.container {
  width:100%;
}

/* dialog */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

/* header */
#header {
  padding:5px;
  background: rgb(166,193,178);
  position:relative;
}

#mode-text {
  display:inline-block;
  font-size:12px;
  height:24px;
  line-height:24px;
}

#get-img {
  display:inline-block;
  background-color:rgb(120,160,120);
  padding-left:10px;
  padding-right:10px;
  border-radius:5px;
  color:rgb(220,208,164);
  font-size:12px;
  height:24px;
  line-height:24px;
  position:absolute;
  top:0;
  right:0;
  margin-top:5px;
  margin-right:10px;
}



/* board */
#board {
  position:relative;
}

#board-background {
  padding:8vw;
  display:flex;
  flex-direction: column;
}

.background-rows {
  box-sizing:border-box;
  border-top:1px black solid;
  display:flex;
  height:6vw;
}

.background-rows:last-child {
  border-bottom:1px black solid;
}

.background-columns {
  box-sizing:border-box;
  border-left:1px black solid;
  flex:1;
}

.background-columns:nth-child(14n) {
  border-right:1px black solid;
}

#board-stone-container {
  background:rgba(255,205,205,0.8);
  z-index:100;
  padding:5vw;
  display:flex;
  flex-direction: column;
  position:absolute;
  left:0;
  right:0;
  top:0;
}

.stone-rows {
  display:flex;
  height:6vw;
}

.stone-columns {
  flex:1;
  padding: 0.5vw;
  max-width:5vw;
}

.stone {
  width: 100%;
  height: 100%;
  border-radius:50%;
  border: 1px solid black;
  overflow: hidden;
  vertical-align: middle;
}

.black_stone {
  background: #000;
  color: #fff;
}

.white_stone {
  background: #fff;
  color: #000;
}

.stone-text {
  width:100%;
  height:6vw;
  line-height:6vw;
  font-size:22rpx;
  display:block;
  text-align:center;
}

.hide-stone {
  border: none;
  background:transparent;
}

.hide-stone > .stone-text {
  display:none;
}

.board-star {
  background: "./star.png" center center no-repeat;
}

/* 控制区 */
#control-panel {
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  padding:10px;
  background-color:rgb(166,193,178);
}

.control-btn {
  display: inline-block;
  margin-right:10px;
}

.ctl-btn-container {
  display:flex;
}

.btn-icon {
  width:32px;
  height:32px;
}

#ctl-confirm {
  display:inline-block;
  background-color:rgb(120,160,120);
  padding-left:10px;
  padding-right:10px;
  border-radius:5px;
  color:rgb(220,208,164);
  height:32px;
  line-height:32px;
  position:absolute;
  right:0;
  margin-right:10px;
}
