page {
  background-color:rgb(234,246,239);
}

.container {
  width:100%;
  overflow:hidden;
}

/* dialog */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  overflow: hidden;
  z-index: 9000;
  color: #333;
  display: table;
}

.modal-dialog {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  font-size:28rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  position:relative;
  top: 50px;
}

.modal-title {
  padding-top: 30rpx;
  padding-bottom:30rpx;
  font-size: 32rpx;
  color: #030303;
  text-align: center;
}

.radio-group {
  margin-top: 50rpx;
}

.label {
  display:block;
  font-size: 32rpx;
  margin-top: 30rpx;
}

.modal-footer {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

/* preview image */
.preview-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  overflow: hidden;
  z-index: 9000;
}

.preview-dialog {
  position:fixed;
  z-index: 9999;
  width: 100%;
  top:0;
  left:0;
}

#preview-img {
  width:750rpx;
  height:750rpx;
}

button {
  margin-top: 10px;
}

/* header */
#header {
  padding:5px;
  background: rgb(166,193,178);
  position:relative;
}

#mode-text {
  display:inline-block;
  font-size:12px;
  height:24px;
  line-height:24px;
}

#get-img {
  display:inline-block;
  background-color:rgb(120,160,120);
  padding-left:10px;
  padding-right:10px;
  border-radius:5px;
  color:rgb(220,208,164);
  font-size:12px;
  height:24px;
  line-height:24px;
  position:absolute;
  top:0;
  right:0;
  margin-top:5px;
  margin-right:10px;
}



/* board */
#hidden-board {
  position:fixed;
  left:750rpx;
  top:0;
}

/* 控制区 */
#control-panel {
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  padding:10px;
  background-color:rgb(166,193,178);
}

.control-btn {
  display: inline-block;
  margin-right:10px;
}

.ctl-btn-container {
  display:flex;
}

.btn-icon {
  width:32px;
  height:32px;
}

.control-text-btn {
  display:inline-block;
  background-color:rgb(120,160,120);
  padding-left:10px;
  padding-right:10px;
  border-radius:5px;
  color:rgb(220,208,164);
  height:32px;
  line-height:32px;
  position:absolute;
  right:0;
  margin-right:10px;
}
